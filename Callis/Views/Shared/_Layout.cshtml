<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Callis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Callis.styles.css" asp-append-version="true" />
    <style>
        html{
            height: 100%;
        }
       
    </style>
</head>
<body class="min-vh-100 d-flex flex-column">
    <header>
        <nav style="background-color:#304DE6" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/images/Logo.png" height="40px" width="40px" alt="Logo" />
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Callis</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1 justify-content-end gap-3">
                        <li class="nav-item">
                            <a class="btn bg-white text-dark" asp-controller="User" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn bg-white text-dark" asp-route="signup">Sign Up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color:#304DE6;" class="mt-auto p-2">
        <div class="container text-white text-center">
            <h4>Contact Us</h4>
            <p class="m-0">20 Gordon Town Road</p>
            <p class="m-0">Kingston 6</p>
            <p class="m-0">Jamaica</p>
        </div>

       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
